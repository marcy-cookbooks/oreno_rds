[mysqld]
datadir=<%= @datadir %>
socket=<%= @socket %>
log-error=<%= @log_error %>
pid-file=<%= @pid_file %>

server_id=<%= @server_id %>
log-bin=mysql-bin
log-slave-updates
gtid-mode=ON
enforce-gtid-consistency
master_info_repository=TABLE
relay_log_info_repository=TABLE
report_host=<%= @report_host %>

!includedir /etc/mysql.d

[mysqld_safe]
log-error=/var/log/mysqld.log
pid-file=/var/run/mysqld/mysqld.pid
